extends layout

block content
  h3 Cria um filme
  .w3-container
    .w3-card-4
      header.w3-container.w3-teal
        form.w3-container(action='/filmes' method='POST')
          label
            b Título
          input.w3-input.w3-border(type='text' name='title')
          label
            b Ano
          input.w3-input.w3-border(type='text' name='year')
          label
            b Actores (para vários actores, separar com ',')
          input.w3-input.w3-border(type='text' name='cast')
          label
            b Géneros (para vários géneros, separar com ',')
          input.w3-input.w3-border(type='text' name='genres')
          input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
      
    a(href="/") Voltar
    
  h3 Lista de filmes
  table
    tr
      th Filmes
      th Operações
    each filme in filmes
      tr
        th 
          a(href="/filmes/"+filme._id)= filme.title
        th 
          button.w3-button.w3-circle.w3-blue-grey(onclick="apaga('" + filme._id + "')") Apagar
          a.w3-button.w3-circle.w3-blue-grey(href="/muda/"+filme._id) Mudar 
