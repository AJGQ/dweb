extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Registo de uma tarefa
            .w3-container
                form.w3-container(action='/' method='POST')
                    label.w3-teal
                        b Tarefa
                    input.w3-input.w3-border.w3-light-grey(type='text' name='tarefa')
                    label.w3-teal
                        b Data Limite
                    input.w3-input.w3-border.w3-light-grey(type='text' name='limite')
                    input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Tarefas
            .w3-container
                table.w3-table-all
                    tr
                        th Tarefa
                        th Data Limite
                        th  
                    each trf in tarefas
                        tr
                            td= trf.tarefa
                            td= trf.limite
                            td
                                form.w3-container(action='/' method='POST')
                                    input.w3-btn.w3-blue-grey(type='submit' value='Completar_pois' name='coisa_esquisita')

            footer.w3-container.w3-teal
                address Gerado por AJGQ
